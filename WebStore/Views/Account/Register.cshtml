@model WebStore.ViewModels.Identity.RegisterUserViewModel

@{
	ViewData["Title"] = "Регистрация";
}

@section Styles
{
<link rel="stylesheet" type="text/css" href="~/css/login.css">
}

<div class="container" style="margin-top: 80px;">
 <div class="wrapper">
  <form asp-action="Register" asp-antiforgery="true" class="login">
   <div asp-validation-summary="ModelOnly" class="text-danger"></div>

   <p class="title">Регистрация</p>

   <input asp-for="UserName" placeholder="Логин" autofocus />
   <span asp-validation-for="UserName" class="text-danger"></span>

   <input asp-for="Password" placeholder="Пароль" />
   <span asp-validation-for="Password" class="text-danger"></span>

   <input asp-for="PasswordConfirm" placeholder="Подтверждение пароля" />
   <span asp-validation-for="PasswordConfirm" class="text-danger"></span>

   <button>
	<i class="spinner"></i>
	<span class="state">Реrистрация</span>
   </button>
  </form>
 </div>
</div>