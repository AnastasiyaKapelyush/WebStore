@model CartViewModel

<div class="cart_container">
	<!-- Cart Bar -->
	<div class="cart_bar">
		<ul class="cart_bar_list item_list d-flex flex-row align-items-center justify-content-end">
			<li class="mr-auto">Продукт</li>
			@*<li>Цвет</li>
			<li>Размер</li>*@
			<li>Цена</li>
			<li>Количество</li>
			<li>Сумма</li>
		</ul>
	</div>

	<!-- Cart Items -->
	<div class="cart_items">
		<ul class="cart_items_list">

			@foreach (var (product, quantity) in Model.Items)
			{
				 <!-- Cart Item -->
				 <li class="cart_item item_list d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-lg-end justify-content-start">
					<div class="product d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-start mr-auto">
					 <div><div class="product_number">1</div></div>
					 <div><div class="product_image"><img src="~/images/@product.ImageUrl" alt=""></div></div>
					 <div class="product_name_container">
					  <div class="product_name"><a asp-controller="Catalog" asp-action="Details">@product.Name</a></div>
					  @*<div class="product_text">Second line for additional info</div>*@
					 </div>
					</div>
					@*<div class="product_color product_text"><span>Цвет: </span>beige</div>
					<div class="product_size product_text"><span>Размер: </span>L</div>*@
					<div class="product_price product_text"><span>Цена: </span>@product.Price.ToString("C")</div>
					<div class="product_quantity_container">
					 <div class="product_quantity ml-lg-auto mr-lg-auto text-center">
					  <span class="product_text product_num">@quantity</span>
					  <a asp-action="Add" asp-route-id="@product.Id"><div class="qty_sub qty_button trans_200 text-center"><span>-</span></div></a>
					  <a asp-action="Decrement" asp-route-id="@product.Id"><div class="qty_add qty_button trans_200 text-center"><span>+</span></div></a>
					 </div>
					</div>
					<div class="product_total product_text"><span>Общая сумма: </span>@((product.Price * quantity))</div>
				 </li>
			}

  </ul>
 </div>

 <!-- Cart Buttons -->
 <div class="cart_buttons d-flex flex-row align-items-start justify-content-start">
  <div class="cart_buttons_inner ml-sm-auto d-flex flex-row align-items-start justify-content-start flex-wrap">
   <div class="button button_clear trans_200"><a asp-controller="Catalog" asp-action="Index">Очистить корзину</a></div>
   <div class="button button_continue trans_200"><a asp-controller="Catalog" asp-action="Index">Назад</a></div>
  </div>
 </div>
</div>